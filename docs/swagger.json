{
    "swagger": "2.0",
    "info": {
        "description": "Service to upload and syncronize plugins to gmkernel flow",
        "title": "gmkernel plugins sync",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "Pulse | Software Engineer",
            "url": "https://engenharia.pulse.io",
            "email": "engenharia@grupomateus.com.br"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.1"
    },
    "basePath": "/",
    "paths": {
        "/summary": {
            "get": {
                "description": "Retrieve list plugin with all versions",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "sync"
                ],
                "summary": "List all plugins",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/controllers.Summary"
                            }
                        }
                    }
                }
            }
        },
        "/upload/": {
            "post": {
                "description": "Recieve plugins's binary and metadata from Gitlab CI",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "sync"
                ],
                "summary": "Upload plugin",
                "parameters": [
                    {
                        "type": "file",
                        "description": "plugin lib (.so, .dll or .app)",
                        "name": "file",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "plugin version, ex. 1.0.1",
                        "name": "--VERSION",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "platform - linux, windows or macos",
                        "name": "--OS",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "id - com.pulse.641.nfe",
                        "name": "--PLUGIN_ID",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controllers.Uploader"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "controllers.Os": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                }
            }
        },
        "controllers.Plugin": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "latest": {
                    "$ref": "#/definitions/controllers.Version"
                },
                "versions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/controllers.Version"
                    }
                }
            }
        },
        "controllers.Summary": {
            "type": "object",
            "properties": {
                "plugins": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/controllers.Plugin"
                    }
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "controllers.Uploader": {
            "type": "object",
            "properties": {
                "os": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "plugin_id": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            }
        },
        "controllers.Version": {
            "type": "object",
            "properties": {
                "number": {
                    "type": "string"
                },
                "os": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/controllers.Os"
                    }
                }
            }
        }
    }
}