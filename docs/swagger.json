{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/": {
            "get": {
                "description": "Retrieve list plugin with all versions",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "sync"
                ],
                "summary": "List all plugins",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/controllers.Uploader"
                            }
                        }
                    }
                }
            }
        },
        "/upload": {
            "post": {
                "description": "Recieve plugins's binary and metadata from Gitlab CI",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "sync"
                ],
                "summary": "Upload plugin",
                "parameters": [
                    {
                        "type": "file",
                        "description": "plugin lib (.so, .dll or .app)",
                        "name": "file",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "plugin version, ex. 1.0.1",
                        "name": "--VERSION",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "platform - linux, windows or macos",
                        "name": "--OS",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "id - com.pulse.641.nfe",
                        "name": "--PLUGIN_ID",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controllers.Uploader"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "controllers.Uploader": {
            "type": "object",
            "properties": {
                "os": {
                    "type": "string"
                },
                "plugin_id": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            }
        }
    }
}